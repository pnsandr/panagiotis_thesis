isbn = {0022-3670},
issn = {0022-3670},
journal = {Journal of Physical Oceanography},
pages = {1103--1119},
pmid = {230580500013},
title = {{Impacts of Shortwave Penetration Depth on Large-Scale Ocean Circulation and Heat Transport}},
